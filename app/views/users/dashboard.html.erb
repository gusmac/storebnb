<%= content_for(:title) do %>
<%= current_user.first_name %> <%= current_user.last_name %> Dashboard
<% end %>

<div class="container">
    <div class="container-text ">
      <h3><%= current_user.first_name %> <%= current_user.last_name %> Dashboard</h3>
    </div>

  <div class="row dashboard-centering user-margin">
    <div class="col-sm-4">
      <div><%= image_tag "blank-avatar-300x300.png", class: "user-avatar " %></div>
    </div>
    <div class="col-sm-8 dashboard-left ">
      <ul class="ul">
        <li>Member Since: 7th August 2018</li>
        <li>Email: <%= current_user.email %></li>
        <li>Phone: +123456789</li>
        <li>Address: </li>
      </ul>
    </div>
  </div>
</div>

<div class="container user-margin ">
    <div class="row">
      <div class="dashboard-bgc dashboard-centering-second">
        <div>
          <div class="dashboard-centering">
            <h4>Bookings</h4>
          </div>
          <div class="dashboard-left">
            <ul class="ul">
            <% current_user.bookings.each do |booking| %>
              <li>Storage Space Title: <%= link_to booking.storage_space.title, storage_space_booking_path(booking.storage_space_id, booking.id) %> Start Date: <%= booking.start_date %> End Date: <%= booking.end_date %> - <%= link_to "Leave a review", storage_space_booking_path(booking.storage_space_id, booking.id) %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
  </div>
</div>

<% if current_user.storage_spaces.empty? %>
<% else %>
<div class="container user-margin ">
    <div class="row">
        <div class="dashboard-bgc dashboard-centering-second">
          <div>
          <div class="dashboard-centering">
            <h4>Storage Spaces</h4>
          </div>
            <ul class="ul">
            <% current_user.storage_spaces.each do |space| %>
              <li>Storage Space Title: <%= space.title %> - <%= link_to "View Storage", storage_space_path(space) %></li>
            <% end %>
            </ul>
          </div>
      </div>
    </div>
</div>
<% end %>


